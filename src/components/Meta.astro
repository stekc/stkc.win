---
interface Props {
    title?: string;
    description?: string;
}
const { title, description } = Astro.props;

import { SEO } from "astro-seo";
---

<SEO
    title={title || "stkc's site"}
    description={description || "dudes be like \"meow\", yeah i like that do it again"}
    canonical="https://stkc.win/"
    extend={{
        link: [
            { rel: "icon", href: "/pfp.png" }
        ],
        meta: [
            { name: "twitter:title", content: title || "stkc's site" },
            { name: "twitter:description", content: description || "dudes be like \"meow\", yeah i like that do it again" },
            { name: "og:title", content: title || "stkc's site" },
            { name: "og:description", content: description || "dudes be like \"meow\", yeah i like that do it again" },
            { name: "og:url", content: "https://stkc.win/"},
            { name: "og:image", content: "/pfp.png" },
            { name: "og:type", content: "website"},
            { name: "viewport", content: "width=device-width, initial-scale=1"},
            { name: "theme-color", content: "#3498db"}
        ],
    }}
/>
